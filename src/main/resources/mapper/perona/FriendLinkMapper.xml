<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.guigui.perona.mapper.FriendLinkMapper">
    <resultMap type="FriendLink" id="FriendLinkResult">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="url" column="url"/>
    </resultMap>

    <sql id="friendLinkFields">id, name, url</sql>

    <select id="selectFriendLinkList" parameterType="FriendLink" resultMap="FriendLinkResult">
        select
        <include refid="friendLinkFields"/>
        from friend_link
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="url != null  and url != ''"> and url = #{url}</if>
        </where>
    </select>
    
    <select id="selectFriendLinkById" parameterType="Long" resultMap="FriendLinkResult">
        select
        <include refid="friendLinkFields"/>
        from friend_link
        where id = #{id}
    </select>

    <select id="selectLinkByName" parameterType="String" resultMap="FriendLinkResult">
        select
        <include refid="friendLinkFields"/>
        from friend_link
        where name = #{namme}
    </select>
        
    <insert id="insertFriendLink" parameterType="FriendLink" useGeneratedKeys="true" keyProperty="id">
        insert into friend_link
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null  and name != ''">name,</if>
            <if test="url != null  and url != ''">url,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null  and name != ''">#{name},</if>
            <if test="url != null  and url != ''">#{url},</if>
         </trim>
    </insert>

    <update id="updateFriendLink" parameterType="FriendLink">
        update friend_link
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null  and name != ''">name = #{name},</if>
            <if test="url != null  and url != ''">url = #{url},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteFriendLinkById" parameterType="Long">
        delete from friend_link where id = #{id}
    </delete>

    <delete id="deleteFriendLinkByIds" parameterType="String">
        delete from friend_link where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>